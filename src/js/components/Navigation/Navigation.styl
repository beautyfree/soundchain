@import '../../../css/variables.styl'

.navigation {
  &__group {
    &__name {
      color: #6b615c;
      font-size: 1rem;
    }
  }

  &__item {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 20px 0;

    color: color-not-activated;

    &--active {
      color: color-activated;
    }

    &__name {
      margin-left: 10px;
      font-size: 1.1em;
    }
    &__icon {
      height: 20px;
      > * {
        height: 20px;
      }
    }
  }
}