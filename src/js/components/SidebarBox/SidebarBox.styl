.sidebar {
  &-box {
    display: flex;
    flex-direction: column;

    background: #391e15 linear-gradient(-150deg, #382019, #391e15, #1c1a1b, #1a1814);
  }

  &__content {
    padding: 0 1.5em;
    flex: 1;
    overflow-y: auto;
  }

  &__player {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    height: 100%;

    &__control, &__control--big {
      padding: 0 20px;
    }

    &__control > * {
      width: 60px;
    }

    &__control--big {
      width: 75px;
    }
  }
}

.nav {
  display: flex;
  flex: 1;
  flex-direction: column;
}
