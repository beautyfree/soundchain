.finance {
  padding: 5px 25px;
  display: flex;
  flex-direction: row;

  color: #a39996;
  text-transform: uppercase;
  background: rgba(0, 0, 0, 0.25);

  &-money {
    color: #4db25c;
    font-size: small;
    font-weight: 800;
  }

  &-name {
    font-size: x-small;
    font-weight: 700;
    margin-bottom: 12px;
  }

  &-item {
    display: flex;
    flex-direction: column;
    flex: 0.5;
  }

  &-box {
    margin-right: 15px;
  }

  &-today-earned {
    margin-left: 20px;
    color: #4db25c;
    font-size: x-small;
  }

  &-content {
    display: flex;
    flex-direction: column;

    flex: 1;

    &-top {
      display: flex;
      flex-direction: row;
      flex: 1;

      width: 100%;
    }

    &-bottom {
      display: flex;
      flex-direction: row;

      width: 100%;
    }
  }
}
