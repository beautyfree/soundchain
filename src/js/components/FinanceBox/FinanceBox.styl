.finance {
  padding: 5px 25px;
  display: flex;
  flex-direction: row;

  color: #a39996;
  text-transform: uppercase;
  background: rgba(0, 0, 0, 0.25);

  &__money {
    color: #4db25c;
    font-size: small;
    font-weight: 800;
  }

  &__name {
    font-size: x-small;
    font-weight: 700;
    margin-bottom: 0.4em;
  }

  &__item {
    display: flex;
    flex-direction: column;
    flex: 0.5;
  }

  &__box {
    margin-right: 15px;

    &__wallet {
      height: 2.2em;
    }
  }

  &__today-earned {
    margin-left: 20px;
    color: #4db25c;
    font-size: x-small;
  }

  &__content {
    display: flex;
    flex-direction: column;

    flex: 1;

    &__top {
      display: flex;
      flex-direction: row;
      flex: 1;

      width: 100%;
    }

    &__bottom {
      display: flex;
      flex-direction: row;

      width: 100%;
    }
  }
}
