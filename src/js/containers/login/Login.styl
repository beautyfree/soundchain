.login {
  display: flex;
  flex: 1;

  justify-content: center;

  padding: 4%;

  background: #262626;

  color: #fff;
  letter-spacing: 3px;
  font-size: 1.5vmin;

  &__left,
  &__right {
    flex: 1;
  }

  &__left {
    display: flex;
    justify-content: center;
  }

  &__slogan {
    font-size: 4em;
    font-weight: 500;
    line-height: 1.2;
    margin-bottom: 0.5em;
  }

  &__logo {
    height: 4vh;
    max-width: 40vw;
  }
}
