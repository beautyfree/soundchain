.login {
  display: flex;
  flex: 1;

  align-items: center;
  justify-content: center;

  background: #262626;
  color: #fff;

  &__content {
    display: flex;
    width: 1200px;
    height: 800px;
  }

  &__left,
  &__right {
    flex: 1;
  }

  &__slogan {
    font-size: 2em;
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 40px;
  }

  &__logo {
    height: 35px;
  }
}
