.stream {
  width: 100%;

  &__top {
    position: relative;

    &__background {
      width: 100%;
    }

    &__context {
      position: absolute;
      top: 1px;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    &__title {
      color: white;
      flex: 1;
      padding: 0 5%;

      &__header {
        margin: 0;
        font-size: 3em;
        font-weight: bold;
        text-transform: uppercase;
      }

      &__desc {
        color: rgba(255, 255, 255, 0.6);
      }
    }
  }

  &__item__user-box {
    margin: 20px;
    & > img {
      height: 40px;
      padding-right: 20px;
    }

    &__info-text {
      text-transform: uppercase;
      color: #acacac;
      letter-spacing: 1px;
      font-weight: 500;
    }
  }
}